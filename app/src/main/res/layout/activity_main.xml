<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFFFF"
    tools:context=".MainActivity">

    <!-- Top Toolbar/Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#00ACC1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_launcher_foreground"
            app:tint="#FFFFFF"
            android:layout_centerVertical="true"
            android:contentDescription="Menu" />
            
         <!-- Placeholder for Logo if available, using text for now -->
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="COMPUTER LIST"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Navigation / date bar area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#263238"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp">
        
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Machine Management System"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

    </LinearLayout>

    <!-- Button Bar (Tabs) -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="#37474F"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <Button
                android:id="@+id/btn_nav_computers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Computers"
                android:backgroundTint="#FFFFFF"
                android:textColor="#00ACC1"
                android:layout_marginEnd="8dp"
                android:minHeight="40dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

            <Button
                android:id="@+id/btn_nav_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New"
                android:backgroundTint="#00000000"
                android:textColor="#FFB74D"
                android:layout_marginEnd="8dp"
                android:minHeight="40dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="#FFB74D"/>
            
            <Button
                android:id="@+id/btn_nav_brands"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brands"
                android:backgroundTint="#00000000"
                android:textColor="#FFB74D"
                android:layout_marginEnd="8dp"
                android:minHeight="40dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="#FFB74D"/>

             <Button
                android:id="@+id/btn_nav_network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Network"
                android:backgroundTint="#00000000"
                android:textColor="#FFB74D"
                android:minHeight="40dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="#FFB74D"/>

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E0E0E0"
        android:padding="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name"
            android:gravity="center"
            android:textColor="#455A64"
            android:textStyle="bold"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#B0BEC5"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Brand"
            android:gravity="center"
            android:textColor="#455A64"
             android:textStyle="bold"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#B0BEC5"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Serial"
            android:gravity="center"
            android:textColor="#455A64"
             android:textStyle="bold"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#B0BEC5"/>

         <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date"
            android:gravity="center"
            android:textColor="#455A64"
             android:textStyle="bold"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#00ACC1"/>

    <!-- Content Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp"
            android:clipToPadding="false"/>
            
        <TextView
            android:id="@+id/empty_view_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="No computers found"
            android:visibility="gone"/>

    </FrameLayout>

</LinearLayout>