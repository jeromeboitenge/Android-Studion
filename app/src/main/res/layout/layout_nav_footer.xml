<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_footer"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:weightSum="3"
    android:background="#FFFFFF"
    android:elevation="8dp"
    android:gravity="center_vertical">

    <ImageButton
        android:id="@+id/btn_nav_back"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_nav_back"
        android:background="?attr/selectableItemBackground"
        android:scaleType="centerInside"
        android:contentDescription="@string/btn_back"
        app:tint="@color/text_primary"/>

    <ImageButton
        android:id="@+id/btn_nav_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_nav_home"
        android:background="?attr/selectableItemBackground"
        android:scaleType="centerInside"
        android:contentDescription="@string/btn_home"
        app:tint="@color/primary_color"/>

    <ImageButton
        android:id="@+id/btn_nav_exit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_nav_exit"
        android:background="?attr/selectableItemBackground"
        android:scaleType="centerInside"
        android:contentDescription="@string/btn_exit"
        app:tint="#D32F2F"/>

</LinearLayout>
