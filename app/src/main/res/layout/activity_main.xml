<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- 1. Custom Toolbar Area -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/app_teal"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="8dp">

            <!-- UPDATED: referencing ic_menu_icon -->
            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_menu_icon"
                app:tint="@color/white" />

            <!-- Replace this with your own logo if you have one later -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/btnMenu"
                android:src="@drawable/ic_launcher_background"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="TRAIN LIST"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher_background"
                tools:srcCompat="@tools:sample/avatars" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- 2. Date Selection Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/dark_grey_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <!-- UPDATED: referencing ic_left_arrow_icon -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_left_arrow_icon"
            app:tint="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Wed 11 Jan 17"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!-- UPDATED: referencing ic_right_arrow_icon -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_right_arrow_icon"
            app:tint="@color/white" />
    </LinearLayout>

    <!-- 3. Quota Selection (Horizontal Scroll) -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/quota_bar_bg"
        android:paddingVertical="12dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginHorizontal="4dp"
                android:backgroundTint="@color/white"
                android:text="General"
                android:textAllCaps="false"
                android:textColor="@color/app_teal" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/quota_button_border"
                android:paddingHorizontal="16dp"
                android:text="Ladies"
                android:textAllCaps="false"
                android:textColor="@color/quota_text_orange" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/quota_button_border"
                android:paddingHorizontal="16dp"
                android:text="Tatkal"
                android:textAllCaps="false"
                android:textColor="@color/quota_text_orange" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/quota_button_border"
                android:paddingHorizontal="16dp"
                android:text="Premium Tatkal"
                android:textAllCaps="false"
                android:textColor="@color/quota_text_orange" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- 4. Sorting Tabs -->
    <!-- UPDATED: referencing ic_down_arrow_icon in tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tab_bg_grey"
        app:tabIndicatorColor="@color/app_teal"
        app:tabSelectedTextColor="@color/app_teal"
        app:tabTextColor="@color/text_secondary">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_down_arrow_icon"
            android:text="Departure" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_down_arrow_icon"
            android:text="Arrival" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_down_arrow_icon"
            android:text="Travel Time" />
    </com.google.android.material.tabs.TabLayout>

    <!-- 5. The Train List area -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTrains"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white" />

</LinearLayout>