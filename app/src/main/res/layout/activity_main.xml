<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- 1. Custom Toolbar Area -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#00ACC1"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="8dp">

            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_menu_icon"
                app:tint="#FFFFFF" />

            <!-- UPDATED: IRCTC Logo -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/btnMenu"
                android:src="@drawable/ic_irctc_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="TRAIN LIST"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- UPDATED: CRIS Logo -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_cris_logo" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- 2. Date Selection Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#263238"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_left_arrow_icon"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Wed 11 Jan 17"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_right_arrow_icon"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- 3. Quota Selection (Updated for better visibility) -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#37474F"
        android:paddingVertical="10dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp">

            <!-- General: Reduced padding and text size -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginHorizontal="2dp"
                android:backgroundTint="#FFFFFF"
                android:text="General"
                android:textSize="12sp"
                android:paddingHorizontal="8dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:textAllCaps="false"
                android:textColor="#00ACC1" />

            <!-- Ladies -->
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginHorizontal="2dp"
                android:background="@drawable/quota_button_border"
                android:paddingHorizontal="10dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Ladies"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textColor="#FFB300" />

            <!-- Tatkal -->
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginHorizontal="2dp"
                android:background="@drawable/quota_button_border"
                android:paddingHorizontal="10dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Tatkal"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textColor="#FFB300" />

            <!-- Premium Tatkal -->
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginHorizontal="2dp"
                android:background="@drawable/quota_button_border"
                android:paddingHorizontal="10dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Premium Tatkal"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textColor="#FFB300" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- 4. Sorting Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        app:tabIndicatorColor="#00ACC1"
        app:tabSelectedTextColor="#00ACC1"
        app:tabTextColor="#757575">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_down_arrow_icon"
            android:text="Departure" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_down_arrow_icon"
            android:text="Arrival" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_down_arrow_icon"
            android:text="Travel Time" />
    </com.google.android.material.tabs.TabLayout>

    <!-- 5. The Train List area -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTrains"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/btn_open_inventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_manage_computers"
        android:backgroundTint="#00ACC1"
        android:textColor="#FFFFFF"
        android:layout_margin="16dp"/>

</LinearLayout>